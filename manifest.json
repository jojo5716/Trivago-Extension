{
  "manifest_version": 2,
  "name": "Trivago frontEnd",
  "description": "Really crazy idea to display Trivago results. Author: Jonathan Rodr√≠guez Alejos",
  "version": "1.0",
  "background": {
    "scripts": ["./src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["./dist/index.css"],
      "js": ["./dist/index.js"]
    }
  ],

  "icons": {
    "200": "./src/images/icon.png"
  },

    "options_page": "./src/popup.html",

  "page_action": {
    "default_icon": {
      "16": "./src/images/icon.png"
    },

    "default_title": "Trivago",
    "default_popup": "./src/index.html"
  },

  "permissions": [
    "activeTab",
    "webRequestBlocking",
    "declarativeContent",
    "https://*/*"

  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
