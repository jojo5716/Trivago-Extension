{
  "name": "Trivago",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Trivago test",
  "homepage_url": "https://es.linkedin.com/in/jojo5716",

  "content_scripts": [
    { "run_at" :"document_end",
      "matches": ["http://www.trivago.es/*"],
      "js": [
        "./src/dependencies/annyang/annyang.js",
        "./src/index.js",
        "./dist/index.js",
        "./dist/page.js"
      ]
    }
  ],

  "web_accessible_resources":[
    "src/dependencies/jquery.js",
    "src/dist/index.js",
    "src/dist/page.js",
    "src/index.html"
  ],

  "browser_action": {
    "default_title": "Inject!"
  },

  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}